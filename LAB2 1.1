// Exercise 1: External Interrupt on INT0 (D2)

const int buttonPin = 2;   // INT0 pin
const int ledPin = 13;     // Onboard LED pin

volatile bool ledState = false;

void setup() {
  pinMode(ledPin, OUTPUT);
  pinMode(buttonPin, INPUT_PULLUP);   // Button connected to GND

  // Attach interrupt on falling edge
  attachInterrupt(digitalPinToInterrupt(buttonPin), toggleLED, FALLING);
}

void loop() {
  // main loop does nothing, LED toggling happens in ISR
}

void toggleLED() {
  ledState = !ledState;
  digitalWrite(ledPin, ledState);
}
